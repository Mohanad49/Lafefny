const productModel = require('../Models/Product');
const { default: mongoose } = require('mongoose');

const adminSellerAddProduct = async(req,res) => {
    const{name, imageUrl, price, quantity, description, seller} = req.body;
    try{
        const user = await productModel.create({name, imageUrl, price, quantity, description, seller});
        res.status(200).json(user)
    }catch(error){
        res.status(400).json({error:error.message})
    }
}
const editProduct = async(req,res) => {
    const{name, imageUrl, price, description, seller} = req.body;
    const ProductId = req.params;

    try{
        const updatedBlog = await productModel.findByIdAndUpdate({_id:mongoose.Types.ObjectId(ProductId)},{name, imageUrl, price, description, seller});
        res.status(200).json(updatedBlog);
    }catch(error){
        res.status(400).json({error:error.message})
    }
}

const getProduct = async (req, res) => {
    const users = await productModel.find({}).sort({createdAt: -1})
  
    for (let index = 0; index < users.length; index++) {
        const element = users[index];
        //console.log(element.id);
    }
    res.status(200).json(users)
  }

module.exports = {adminSellerAddProduct,editProduct,getProduct};